<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/speed_dial_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/fab_padding">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/fab_item_size"
        android:layout_height="@dimen/fab_item_size"
        android:layout_margin="@dimen/fab_offset"
        app:cardBackgroundColor="@color/fab_item_background"
        app:cardCornerRadius="@dimen/fab_item_radius"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:padding="8dp"
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

</LinearLayout>
